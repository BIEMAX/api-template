{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "[Debug] Launch via NPM",
      //runtimeExecutable": "npm",
      // "runtimeArgs": [
      //   "run-script",
      //   "debug"
      // ],
      // "port": 9229,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js",
        //"${workspaceFolder}/node_modules/**/*.js"
      ],
      "program": "${workspaceFolder}/src/app.js",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false //If define true, when start debug, the code will stop at the app.js
    }
  ]
}